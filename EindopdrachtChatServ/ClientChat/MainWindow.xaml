<Window x:Class="ClientChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="chatListBox" Width="200" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>
        <TextBox Name="messageTextBox" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBox>
        <Button x:Name="SendButton" Content="Send" Click="SendButton_Click" Width="100" Height="50" ></Button>
    </Grid>
</Window>
