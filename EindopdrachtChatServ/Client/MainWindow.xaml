<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="500" Width="300">
    <Grid>
        <ScrollViewer>
        <ListBox Name="chatListBox" Width="280" Height="413" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>
        </ScrollViewer>
        <TextBox Name="messageTextBox" Width="240" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" KeyDown="EnterPressed"></TextBox>
        <Button x:Name="sendButton" Content="Send" Click="SendMessage" Width="60" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>
    </Grid>
</Window>
